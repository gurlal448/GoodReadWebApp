@model GoodReadWebApp.Models.Publication

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Publication Details</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PublicationID" />
            <div class="form-group">
                <label asp-for="PublicationName" class="control-label"></label>
                <input asp-for="PublicationName" class="form-control" />
                <span asp-validation-for="PublicationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Publication Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Publication</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
